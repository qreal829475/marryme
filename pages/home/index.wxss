/* pages/home/index.wxss */
.container {
    background-color: #ffffff;
    color: #222222;
}

.step1,
.step2 {
    position: absolute;
    top: 40%;
    width: 100%;
    transform: translateY(-50%);
    text-align: center;
    opacity: 0;
    position: absolute;
}

.step1 {
    animation: myStep1 2s;
    animation-iteration-count: 1;
}

.step2 {
    animation: myStep2 2s 2.2s;
    animation-iteration-count: 1;
}

.hidden {
    display: none;
}

.motto {
    margin-top: -30%;
}

@keyframes myStep1 {
    0% {
        opacity: 0;
    }

    2% {
        opacity: 1;
    }

    90% {
        opacity: 1;
    }

    98% {
        opacity: 1;
    }

    100% {
        opacity: 0;
        display: none;
    }
}


@keyframes myStep2 {
    0% {
        opacity: 0;
        display: flex;
    }

    2% {
        opacity: 1;
    }

    90% {
        opacity: 1;
    }

    98% {
        opacity: 1;
    }

    100% {
        opacity: 0;
        display: none;
    }
}

